<Window x:Class="VoorraadbeheerSysteemProject.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:VoorraadbeheerSysteemProject.Wpf.ViewModels"
        xmlns:userControls="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
        Title="Inventory" Height="1000" Width="1500"
        Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F6F8FC">
            <StackPanel Margin="10" VerticalAlignment="Stretch">
                <TextBlock Text="Inventory" FontWeight="Bold" FontSize="20" Margin="10"/>

                <TextBlock Text="MENU" Margin="10,20,0,5" Foreground="Gray"/>
                <Button Content="Dashboard" Margin="5" HorizontalAlignment="Left" Foreground="#5A6ACF" Background="{x:Null}" BorderBrush="{x:Null}" Width="145"/>
                <Button Content="Sales" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Purchase" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Product" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Inventory" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Reports" Margin="5" HorizontalAlignment="Left"/>

                <TextBlock Text="OTHERS" Margin="10,20,0,5" Foreground="Gray"/>
                <Button Content="Settings" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Supplier" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Customer" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Category" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Location" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Line" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Tax" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Payment" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Accounts" Margin="5" HorizontalAlignment="Left"/>
                <Button Content="Help" Margin="5" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Content="{Binding CurrentViewModel}">
            <!--  linken van vm aan userControl  -->
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:VmProducts}">
                    <userControls:DashboardView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
        <!--<Grid Grid.Column="1">
            <TextBlock Text="Main Content Here" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>-->
    </Grid>
</Window>
