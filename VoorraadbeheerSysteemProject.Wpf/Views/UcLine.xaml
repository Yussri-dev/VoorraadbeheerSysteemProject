<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VoorraadbeheerSysteemProject.Wpf.ViewModels"
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">



    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Label Content="Line"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="20,10,0,0"/>

        <!-- Nieuwe Line toevoegen -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="60"
                    Margin="0,10">
            <Label Content="New Line"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Width="120"
                   Height="35"/>
            <Border CornerRadius="5"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="White"
                    Width="300"
                    Height="35">
                <TextBox Text="{Binding NewLineName, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="5"
                         VerticalContentAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Zoekbalk en paginatie -->

        <StackPanel Grid.Row="2" Margin="5,0,5,0">

            <StackPanel Orientation="Horizontal"
                 HorizontalAlignment="Right"
                 Margin="0,0,0,10" Height="45" Width="415">
                <Label Content="Search by Name" Width="100" VerticalAlignment="Center"/>

                <TextBox Width="130" 
                  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                  Background="#F6F6FB" 
                  BorderThickness="0"
                  FontSize="12"
                  VerticalContentAlignment="Center"
                  Padding="12,0,0,0"
                  Margin="5,0,0,0"/>

                <Border Margin="0 0 20 0"
                 Background="#F6F6FB" 
                 BorderThickness="0" 
                 Padding="5" 
                 CornerRadius="0 5 5 0" Height="46" Width="32">

                    <Path Fill="#627B87" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                </Border>


                <!-- Pagina navigatie -->

                <Border CornerRadius="5" 
                 BorderBrush="Black" 
                 BorderThickness="1" 
                 Background="#FBFCFE" Width="120">
                    <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                        <Button Command="{Binding PreviousPageCommand}" 
                         Style="{StaticResource PrimaryButtonStyle}" 
                         Width="40" 
                         Content="&lt;" 
                         Foreground="Black"
                         Background="Transparent" Height="39"/>
                        <Label Content="{Binding PageNumber}" 
                        Padding="5" 
                        Foreground="#5A6ACF"
                        Width="18"
                        Height="20"/>
                        <Button Command="{Binding NextPageCommand}" 
                         Style="{StaticResource PrimaryButtonStyle}" 
                         Width="40" 
                         Content="&gt;" 
                         Foreground="Black"
                         Background="Transparent" Height="39"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Line lijst -->
            <ListView Style="{StaticResource CustomListViewStyle}"
               ItemsSource="{Binding FilteredLines}" 
               SelectedItem="{Binding SelectedLine, Mode=TwoWay}" 
               Margin="0,10,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" Width="30" DisplayMemberBinding="{Binding LineId}"/>
                        <GridViewColumn Header="Name line" DisplayMemberBinding="{Binding Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


        <!-- Knoppen + Total lines -->
        <StackPanel Grid.Row="3"
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top" Width="455" Height="95" Margin="0,5,0,0">

            <Button Content="Add"
                    Command="{Binding AddLineCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Update"
                    Command="{Binding UpdateLineCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Reset"
                    Command="{Binding ResetLineCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Delete"
                    Command="{Binding DeleteLineCommand}"
                    CommandParameter="{Binding SelectedLine}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Close"
                    Command="{Binding NavigateDashboardCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>

        </StackPanel>

        <StackPanel Grid.Row="3"     HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Margin="0,0,644,0" Height="95">

            <Label Content="Total Lines" FontWeight="Bold" Width="95"/>
            <TextBox Text="{Binding TotalLines}"
                         IsReadOnly="True"
                         Width="100"
                         Foreground="#40AF73" Height="25"/>
        </StackPanel>

    </Grid>
</UserControl>
