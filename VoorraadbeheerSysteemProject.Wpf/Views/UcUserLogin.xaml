<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcUserLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Helpers"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             xmlns:vm="clr-namespace:VoorraadbeheerSysteemProject.Wpf.ViewModels">

    <Grid Background="#0E0E0E">
        <Border Background="White" Padding="30" CornerRadius="20"
                Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!--Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}"-->
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Welcome Back 👋" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center" />

                <!-- Username Field -->
                <StackPanel>
                    <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,4" Foreground="#333"/>
                    <DockPanel Background="#F5F5F5" Height="40" VerticalAlignment="Center" >
                        <iconPacks:PackIconMaterial Kind="AccountCircle" Width="22" Height="22" 
                                                    Foreground="#007BFF" Margin="8,0" />
                        <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderThickness="0" Background="Transparent" Padding="4" 
                                 VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel>
                    <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,4" Foreground="#333"/>
                    <DockPanel Background="#F5F5F5" Height="40" VerticalAlignment="Center" >
                        <iconPacks:PackIconMaterial Kind="Lock" Width="22" Height="22" 
                                                    Foreground="#007BFF" Margin="8,0" />
                        <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" 
                                     BorderThickness="0" Background="Transparent" Padding="4" 
                                     VerticalContentAlignment="Center"/>
                    </DockPanel>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Sign In" 
                        Command="{Binding LoginCommand}"
                        Background="#007BFF" Foreground="White" 
                        FontWeight="SemiBold" FontSize="14"
                        Height="42"
                        BorderThickness="0" Cursor="Hand"
                        Margin="0,10,0,0" />

                <!-- Error Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#E53935" FontSize="12"
                           TextWrapping="Wrap" TextAlignment="Center"
                           Margin="0,5,0,0"/>

                <!-- Footer -->
                <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="#666" Margin="0,20,0,0">
                    <Run Text="Don't have an account? " />
                    <Hyperlink Command="{Binding NavigateToUserCreateCommand}" Foreground="#007BFF" FontWeight="Bold">
                        Sign up
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
