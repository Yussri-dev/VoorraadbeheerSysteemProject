<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcUserLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#1E1E1E">
        <Border Background="White" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Login" FontSize="22" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>

                <TextBlock Text="Email address" Margin="0 5 0 0"/>
                <TextBox Margin="0 5" Height="30" Padding="5"/>

                <TextBlock Text="Password" Margin="0 5 0 0"/>
                <PasswordBox Margin="0 5" Height="30" Padding="5"/>

                <Button Content="Sign In" Margin="0 15 0 0" Background="#007BFF" Foreground="White" Height="35" FontWeight="SemiBold"/>

                <!-- Google Sign-In -->
                <Button Height="35" Margin="0 10 0 10" Background="White" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Images/Google__G__logo.svg.png" 
                               Height="20" Width="20" Margin="0 0 8 0"/>
                        <TextBlock Text="Continue with Google" VerticalAlignment="Center" Foreground="#5F6368"/>
                    </StackPanel>
                </Button>

                <TextBlock HorizontalAlignment="Center" Margin="0 10">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink Foreground="Blue" TextDecorations="None">
                        Sign up
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>