<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.Printing.PrintPurchases"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views.Printing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="From:" Margin="5" VerticalAlignment="Center"/>
            <Label Content="{Binding SelectedStartDate, StringFormat='{}{0:dd/MM/yyyy}'}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="To:" Margin="5" VerticalAlignment="Center"/>
            <Label Content="{Binding SelectedEndDate, StringFormat='{}{0:dd/MM/yyyy}'}" VerticalAlignment="Center"/>
        </StackPanel>
        <ListView Style="{StaticResource CustomListViewStyle}"
                  ItemsSource="{Binding FilteredPurchases}"
                  Grid.Row="2"
                  Margin="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="50" DisplayMemberBinding="{Binding PurchaseItemId}"/>
                    <GridViewColumn Header="Product Name" Width="auto" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Purchase" Width="100" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="Tax Rate" Width="100" DisplayMemberBinding="{Binding TaxAmount}"/>
                    <GridViewColumn Header="Supplier" Width="100" DisplayMemberBinding="{Binding SupplierName}" />
                    <GridViewColumn Header="Purchase Date" Width="100" DisplayMemberBinding="{Binding PurchaseDate, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    <GridViewColumn Header="Quantity" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Total" Width="100" DisplayMemberBinding="{Binding TotalAmount}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal">
            <Label Content="Total:" Margin="5" VerticalAlignment="Center"/>
            <Label Content="{Binding PurchaseTotal}" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
