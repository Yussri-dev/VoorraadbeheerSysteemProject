<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcSupplier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--buttons-->
            <Button Grid.Column="1"
             Content="Print"
             Command="{Binding PrintCommand}"
             HorizontalAlignment="Left" 
             Margin="185,0,0,0"
             VerticalAlignment="Center"
             Height="30" Width="80" Background="#F6F6FB " RenderTransformOrigin="-0.062,0.667" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>

                </Button.Resources>
            </Button>
            <Button Grid.Column="1"
             Content="Reset"
             Command="{Binding ResetCommand}"
             HorizontalAlignment="Left"
             Margin="75,0,0,0" VerticalAlignment="Center" Height="30" Width="80" Background="#F6F6FB">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Grid.Column="1" 
             Content="Close" 
             Command="{Binding CloseCommand}"
             HorizontalAlignment="Left"
             Margin="295,0,0,0" VerticalAlignment="Center" Width="80" Height="30" Background="#F6F6FB " RenderTransformOrigin="0.5,0.833">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label Content="Total Suppliers" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Left" Margin="45,39,0,0" VerticalAlignment="Top"/>
            <TextBox 
       Grid.Column="0"   
        HorizontalAlignment="Left"
       Margin="45,70,0,0"
       TextWrapping="Wrap"
       Text="{Binding TotalSuppliers, Mode=OneWay}"
       Foreground="#40AF73"
       VerticalAlignment="Top"
       Width="120"
       IsReadOnly="True" />


        </Grid>
        <Label Content="Supplier" Margin="0,65,645,0" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Height="80"/>

        <!-- Supplier Name-->

        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredSuppliers}" 
    AutoGenerateColumns="False" 
    Margin=" 0 20 0 0" 
    Background="Transparent" 
    BorderThickness="0" 
    GridLinesVisibility="None" 
    HeadersVisibility="Column" 
    AlternatingRowBackground="#F5F6FB" 
    SelectionUnit="FullRow" 
    SelectionMode="Single" 
    EnableRowVirtualization="False"
    IsReadOnly="True">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Margin" Value="0 0 0 8"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder" Background="{TemplateBinding Background}" 
              BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                    <DataGridCellsPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#D0E0FF"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="40" />
                <DataGridTextColumn Header="Supplier Name" Binding="{Binding Name}" Width="*"  />
                <DataGridTextColumn Header="Number 1" Binding="{Binding Number1}" Width="*"/>
                <DataGridTextColumn Header="Number 2" Binding="{Binding Number2}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Created" Binding="{Binding Created}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Search box-->

        <StackPanel  Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Height="32"   HorizontalAlignment="Left" Margin="355,113,0,5" Width="445">
            <Label Content="Search by Name" Width="100"/>
            <TextBox Width="130"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Background="#F6F6FB" VerticalContentAlignment="Center" FontSize="12" Padding="12 0 0 0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5 0 0 5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Margin="0 0 20 0" Background="#F6F6FB" BorderThickness="0" Padding="5">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0 5 5 0"/>
                    </Style>
                </Button.Resources>
                <Image Source="/Images/search-icon.png"/>
            </Button>

            <Button Width="70" Margin="0 0 10 0" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold" Content="&lt;">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Width="73" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold" Content="&gt;">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
