<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcSaleDataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:VoorraadbeheerSysteemProject.Wpf.ViewModels" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views" 
             d:DataContext="{d:DesignInstance Type=viewmodels:VmNumPadDataEntry}"
             mc:Ignorable="d">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Summary section -->
            <RowDefinition Height="400"/>
            <RowDefinition Height="80"/>
            <!-- Keypad and control buttons -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <!-- Total Gain -->
            <StackPanel Grid.Column="0" Margin="10,10,10,0">
                <TextBlock Text="Total Gain" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedTotalAmount, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Number of Lines -->
            <StackPanel Grid.Column="1" Margin="10,10,10,0">
                <TextBlock Text="Number of Lines" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedCountLine, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Total Quantity -->
            <StackPanel Grid.Column="2" Margin="10,10,10,0">
                <TextBlock Text="Total Qty" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedTotalQuantity, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Controls and Keypad -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Control buttons -->
                <ColumnDefinition Width="3*"/>
                <!-- Keypad -->
            </Grid.ColumnDefinitions>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,20,0"/>

            <!-- Numeric Keypad + Return & Del -->
            <Grid Grid.Column="0">
                <ListView 
                    ItemsSource="{Binding SelectedAmounts}" 
                    Style="{StaticResource CustomListViewStyle}"
                    Background="Transparent"
                    FontSize="16" Margin="10,0,10,84">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding AmountPrice}" Width="150" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="23,307,23,21"><Run Text="{Binding FormattedSelectedAmountTotal, Mode=OneWay}"/></TextBlock>
            </Grid>
            <!-- Numeric Keypad + Return & Del -->
            <Grid Grid.Column="1" Margin="0,0,0,15">
                <!-- Use the correct DataContext binding here -->
                <!--<local:UcNumericPad DataContext="{Binding}" Margin="16,0,46,0" />-->
                <local:UcNumericPad 
                    AddCommand="{Binding AddSaleAmountCommand}" Margin="31,0,31,0" />
            </Grid>

        </Grid>


        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="90,0,0,0" Height="80">
                <Button Content="Reset" Command="{Binding ClearSaleAmountCommand}" Width="140" Height="50" Background="White" BorderBrush="#E0E0E0" Margin="5"/>
                <Button Content="Delete" Command="{Binding RemoveSelectedSaleAmountCommand}" Width="140" Height="50" Background="White" BorderBrush="#E0E0E0" Margin="5"/>
                <Button Content="Add"  Command="{Binding ValidateSaleDataCommand}" Width="140" Height="50" Background="White" BorderBrush="#E0E0E0" Margin="5"/>
                <Button Content="Close"  Width="140" Height="50" Background="White" BorderBrush="#E0E0E0" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
