<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcSaleDataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:VoorraadbeheerSysteemProject.Wpf.ViewModels" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             mc:Ignorable="d">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Summary section -->
            <RowDefinition Height="*"/>
            <!-- Keypad and control buttons -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <!-- Total Gain -->
            <StackPanel Grid.Column="0" Margin="10,10,10,0">
                <TextBlock Text="Total Gain" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedTotalAmount, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Number of Lines -->
            <StackPanel Grid.Column="1" Margin="10,10,10,0">
                <TextBlock Text="Number of Lines" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedCountLine, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Total Quantity -->
            <StackPanel Grid.Column="2" Margin="10,10,10,0">
                <TextBlock Text="Total Qty" FontSize="12"/>
                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0">
                    <Run Text="{Binding FormattedTotalQuantity, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Controls and Keypad -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Control buttons -->
                <ColumnDefinition Width="3*"/>
                <!-- Keypad -->
            </Grid.ColumnDefinitions>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,20,0"/>

            <!-- Numeric Keypad + Return & Del -->
            <Grid Grid.Column="1" Margin="0,-9,0,24">
                <!-- Use the correct DataContext binding here -->
                <local:UcNumericPad DataContext="{Binding}" Margin="16,0,46,0" />
            </Grid>

        </Grid>
    </Grid>
</UserControl>
