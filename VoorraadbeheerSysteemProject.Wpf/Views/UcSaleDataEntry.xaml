<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcSaleDataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Your Data" FontWeight="Bold" FontSize="16" Margin="10"/>
            <TextBlock Text="Field 1:" Margin="10,0,10,0"/>
            <TextBox Text="{Binding Data1, Mode=TwoWay}" Margin="10"/>
            <TextBlock Text="Field 2:" Margin="10,0,10,0"/>
            <TextBox Text="{Binding Data2, Mode=TwoWay}" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="OK" Command="{Binding OkCommand}" Margin="0,0,10,0"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
