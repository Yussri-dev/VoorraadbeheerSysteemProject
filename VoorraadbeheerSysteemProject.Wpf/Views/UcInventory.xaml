<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" >
    <StackPanel>
        <!--#region dropboxes-->
        <Grid Margin="60 90 60 50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Inventory" FontSize="24" FontWeight="Bold"/>
                <ComboBox Style="{StaticResource CustomComboBoxStyle}"
                          ItemsSource="{Binding FilteredCategories}"
                          Foreground="#BDC1C8"
                          Width="300" 
                          Margin="25 10 0 0"
                          FontSize="18"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Purchase"/>
                    <ComboBoxItem Content="Sales"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Date Start" FontSize="15" FontWeight="Medium" Foreground="#737B8B78"/>
                <DatePicker Style="{StaticResource CustomDatePickerStyle}"
                            Foreground="#40AF73" 
                            FontSize="18" 
                            Width="300"
                            FontWeight="Medium" 
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            BorderThickness="0"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Date End" FontSize="15" FontWeight="Medium" Foreground="#737B8B78"/>
                <DatePicker Style="{StaticResource CustomDatePickerStyle}"
                            Foreground="#40AF73" 
                            FontSize="18" 
                            Width="300"
                            FontWeight="Medium" 
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            BorderThickness="0"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->

        <!--#region searchboxes-->
        <StackPanel Orientation="Horizontal" Height="32" HorizontalAlignment="Right" Margin="30">
            <Label Content="Search by Name" VerticalAlignment="Center"/>
            <TextBox Width="250" BorderThickness="0" Background="#F6F6FB" VerticalContentAlignment="Center" FontSize="12" Padding="12 0 0 0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5 0 0 5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Margin="0 0 20 0" Background="#F6F6FB" BorderThickness="0" Padding="5">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0 5 5 0"/>
                    </Style>
                </Button.Resources>
                <Path Fill="#627B87" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
            </Button>
            <Label Content="Search by Code" VerticalAlignment="Center"/>
            <TextBox Width="250" BorderThickness="0" Background="#F6F6FB" VerticalContentAlignment="Center" FontSize="12" Padding="12 0 0 0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5 0 0 5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Margin="0 0 20 0" Background="#F6F6FB" BorderThickness="0" Padding="5">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0 5 5 0"/>
                    </Style>
                </Button.Resources>
                <Path Fill="#627B87" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
            </Button>
            <Button Width="70" Margin="0 0 10 0" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                &lt;
            </Button>
            <Button Width="70" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                &gt;
            </Button>
        </StackPanel>
        <!--#endregion-->
        
        <!--#region inventory list-->
        <DataGrid Name="ProductsDataGrid" ItemsSource="{Binding Purchases}" 
                  AutoGenerateColumns="False" 
                  Margin=" 40 20 40 0" 
                  Background="Transparent" 
                  BorderThickness="0" 
                  GridLinesVisibility="None" 
                  HeadersVisibility="Column" 
                  AlternatingRowBackground="#F5F6FB" 
                  SelectionUnit="FullRow" 
                  SelectionMode="Single" 
                  EnableRowVirtualization="False"
                  IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Margin" Value="0 0 0 8"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder" Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                    <DataGridCellsPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="RowBorder" Property="Background" Value="#D0E0FF"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="40"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Purchase" Binding="{Binding Amount}" Width="80"/>
                <DataGridTextColumn Header="Sale Price" Binding="{Binding SalePrice}" Width="80"/>
                <DataGridTextColumn Header="Tax Rate" Binding="{Binding TaxRate}" Width="80"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier}" Width="120"/>
                <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate}" Width="120"/>
                <DataGridTextColumn Header="Qty in Stock" Binding="{Binding Stock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
        
        <!--#region Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="100,30">
            <Button Content="Reset"
                    Background="#DDE4F0"
                    Padding="30,10"
                    Margin="0 0 15 0"/>
            <Button Content="Print"
                    Background="#DDE4F0"
                    Padding="30,10"
                    Margin="0 0 15 0"/>
            <Button Content="Close"
                    Background="#DDE4F0"
                    Padding="30,10"/>
        </StackPanel>
        <!--#endregion-->

    </StackPanel>
</UserControl>
