<UserControl x:Class="VoorraadbeheerSysteemProject.Wpf.Views.UcInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoorraadbeheerSysteemProject.Wpf.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" MinHeight="150"/>
            <RowDefinition Height="0.5*" MinHeight="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*" MinHeight="100"/>
        </Grid.RowDefinitions>
        <!--#region dropboxes-->
        <Grid Margin="60 0 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Inventory" FontSize="24" FontWeight="Bold"/>
                <ComboBox Style="{StaticResource CustomComboBoxStyle}"
                          ItemsSource="{Binding FilteredCategories}"
                          Foreground="#BDC1C8"
                          Width="300" 
                          Margin="25 10 0 0"
                          FontSize="18"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Purchase"/>
                    <ComboBoxItem Content="Sales"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Date Start" FontSize="15" FontWeight="Medium" Foreground="#737B8B78"/>
                <DatePicker Style="{StaticResource CustomDatePickerStyle}"
                            Foreground="#40AF73" 
                            FontSize="18" 
                            Width="300"
                            FontWeight="Medium" 
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            BorderThickness="0"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Label Content="Date End" FontSize="15" FontWeight="Medium" Foreground="#737B8B78"/>
                <DatePicker Style="{StaticResource CustomDatePickerStyle}"
                            Foreground="#40AF73" 
                            FontSize="18" 
                            Width="300"
                            FontWeight="Medium" 
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            BorderThickness="0"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->

        <!--#region searchboxes-->
        <StackPanel Orientation="Horizontal" 
                    Height="32" 
                    HorizontalAlignment="Right" 
                    Margin="30"
                    Grid.Row="1">
            <Label Content="Search by Name" VerticalAlignment="Center"/>
            <TextBox Width="250" BorderThickness="0" Background="#F6F6FB" VerticalContentAlignment="Center" FontSize="12" Padding="12 0 0 0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5 0 0 5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Margin="0 0 20 0" Background="#F6F6FB" BorderThickness="0" Padding="5">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0 5 5 0"/>
                    </Style>
                </Button.Resources>
                <Path Fill="#627B87" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
            </Button>
            <Label Content="Search by Code" VerticalAlignment="Center"/>
            <TextBox Width="250" BorderThickness="0" Background="#F6F6FB" VerticalContentAlignment="Center" FontSize="12" Padding="12 0 0 0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5 0 0 5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Margin="0 0 20 0" Background="#F6F6FB" BorderThickness="0" Padding="5">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0 5 5 0"/>
                    </Style>
                </Button.Resources>
                <Path Fill="#627B87" Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
            </Button>
            <Button Width="70" Margin="0 0 10 0" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                &lt;
            </Button>
            <Button Width="70" Foreground="#5A6ACF" Background="#FBFCFE" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                &gt;
            </Button>
        </StackPanel>
        <!--#endregion-->
        
        <!--#region inventory list-->
        <ListView Style="{StaticResource CustomListViewStyle}"
                  ItemsSource="{Binding Purchases}"
                  Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Product Name" Width="Auto" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Purchase" Width="100" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Sale Price" Width="100" DisplayMemberBinding="{Binding SalePrice}"/>
                    <GridViewColumn Header="Tax Rate" Width="100" DisplayMemberBinding="{Binding TaxRate}"/>
                    <GridViewColumn Header="Supplier" Width="100" DisplayMemberBinding="{Binding Supplier}" />
                    <GridViewColumn Header="Sale Date" Width="100" DisplayMemberBinding="{Binding SaleDate}"/>
                    <GridViewColumn Header="Qty in Stock" Width="100" DisplayMemberBinding="{Binding Stock}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <!--#region Buttons-->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="100,30"
                    Grid.Row="3">
            <Button Content="Reset"
                    Background="#DDE4F0"
                    Padding="30,10"
                    Margin="0 0 15 0"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Foreground="#5A6ACF"
                    FontWeight="Medium">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Print"
                    Background="#DDE4F0"
                    Padding="30,10"
                    Margin="0 0 15 0"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Foreground="#5A6ACF"
                    FontWeight="Medium">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Close"
                    Background="#DDE4F0"
                    Padding="30,10"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Foreground="#5A6ACF"
                    FontWeight="Medium">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <!--#endregion-->

    </Grid>
</UserControl>
